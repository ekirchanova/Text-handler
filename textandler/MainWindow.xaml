<Window x:Class="textHandlerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:textHandlerApp"
        mc:Ignorable="d"
        Title="Text handler" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFD8D8D8"/>
                <GradientStop Color="#FFBA51BB" Offset="0.643"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Margin="0,3,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Text="Text handler" Width="400" Height="70" Foreground="Black" FontSize="55"/>

        <StackPanel Orientation="Horizontal" Margin="0,70,0,200" Width="800" Height="140" >
            <StackPanel  Margin="50,0,0,0" Background="LightPink" Width="300" Height="140" >
                <Button x:Name="SelectProcessFileBtn" Content="Select a file to process" FontSize="20" Width="300" Height="70" Background="LightPink" Foreground="Black" Command="{Binding SelectInputFilesCommand}" />
                <Button x:Name="SelectSaveFileBtn" Content="Select path to save" FontSize="20" Width="300" Height="70" Background="LightPink" Foreground="Black"  Command="{Binding SelectSaveFileCommand}"/>
            </StackPanel>
        
            <StackPanel Margin="80,0,50,0" Background="LightPink" Width="300" Height="140" >
                <TextBlock Text="Min amount of symbols:" Width="300" Height="52" Foreground="Black" FontSize="20" />
                <TextBox Text="{Binding MinAmountOfSymbols, UpdateSourceTrigger=PropertyChanged}"  Height="46"  Width="237" Foreground="Black" FontSize="20" PreviewTextInput="NumberValidationTextBox" MaxLength="3" RenderTransformOrigin="0.5,0.901"/>
                <CheckBox Content="Delete punctuation marks" Background="Black" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Height="34" Width="300" FontSize="20" IsChecked="{Binding NeedDeletePunctuationMarks}" />
            </StackPanel>

        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,120, 0,0" Width="800" Height="70" >
            <Button x:Name="ProcessBtn" Margin="120,0,0,0" Content="Process" Width="200" Height="70" Background="LightPink" Foreground="HotPink" FontSize="35" Command="{Binding ProcessCommand}"/>
            <Button x:Name="CancelBtn" Margin="120,0,120,0" Content="Cancel" Width="200" Height="70" Background="LightPink" Foreground="HotPink" FontSize="35" Command="{Binding CancelCommand}"/>
        </StackPanel>

        <TextBlock x:Name="StatusTextBlock" Text="{Binding StatusText}" FontWeight="Bold" Margin="34,329,10,18"  FontSize="30" Foreground="Red"/>

        <StackPanel x:Name="ProgressPanel" Margin="25,324,19,23" Background="LightPink" Visibility="Hidden">
            <ProgressBar x:Name="ProgressBar" Height="20" Margin="0,10" Maximum="100" Value="{Binding ProgressValue}" />
            <TextBlock x:Name="ProgressTextBlock" Text="{Binding StatusText}" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
